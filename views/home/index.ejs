<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/header'); -%>

  <body>
    <%- include('../includes/navbar'); -%>
    <!-- Page Header -->
    <header class="masthead">
      <img
        src="/img/Blue White Modern English Course Facebook Cover (1920 x 900 px) (1366 x 400 px).gif"
        alt="minh"
        style="margin: 0; width: 100%; height: auto"
      />
    </header>

    <!-- Main Content -->
    <div class="bodyContainer">
      <h1>Courses</h1>
      <%if (courses.length > 0) { %>
      <div class="grid-container">
        <!-- Courses List -->
        <% for (let course of courses) { %>
        <div class="course grid-item">
          <h2><%= course.title %></h2>
          <img src="\img\courses.jpg" alt="" />
          <hr />
          <p><%= course.infomation %></p>
          <p><%= course.fee %> VND</p>
        </div>
        <% } %>

        <!-- End of Courses List -->
      </div>
      <% } %>

      <hr />

      <h1>Lecture</h1>

      <%if (lecturers.length > 0) { %>
      <div class="grid-container">
        <!-- Courses List -->
        <% for (let lecturer of lecturers) { %>
        <div class="course grid-item">
          <h2><%= lecturer.first_name + " " + lecturer.last_name %></h2>
          <img src="\img\courses.jpg" alt="" />
          <hr />
          <p><%= lecturer.email %></p>
          <p><%= lecturer.info %></p>
        </div>
        <% } %>

        <!-- End of Courses List -->
      </div>
      <% } %>
    </div>
    <hr />
    <div class="footerGif">
      <iframe
        src="https://giphy.com/embed/QaYqtStGSYNd21aXQp"
        width="100%"
        height="100%"
        style="position: absolute"
        frameBorder="0"
      ></iframe>
    </div>
    <%- include('../includes/scripts'); -%> <%- include('../includes/footer');
    -%>
  </body>
</html>
